# Build stage
FROM --platform=$BUILDPLATFORM golang:1.25.4 AS builder

# Docker automatically provides these args during multi-platform builds
ARG TARGETOS=linux
ARG TARGETARCH=amd64

# Set environment variables for cross-compilation
ENV CGO_ENABLED=0
ENV GOOS=$TARGETOS
ENV GOARCH=$TARGETARCH

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace

# Copy go module files and VERSION
COPY go.mod go.sum VERSION ./
RUN go mod download

# Copy source files
COPY site-manager/ ./site-manager/
COPY cert-manager/ ./cert-manager/

# Build the site manager
WORKDIR /workspace/site-manager
RUN VERSION=$(cat /workspace/VERSION 2>/dev/null || echo "dev") && \
    BUILD_TIME=$(date +"%Y-%m-%d %H:%M:%S") && \
    go build \
        -ldflags "-extldflags '-static' -w -s" \
        -o /app/sitemgr \
        ./cmd/sitemgr

# Final stage
FROM nvcr.io/nvidia/distroless/go:v3.2.1 AS final

WORKDIR /app

# Copy binary from builder
COPY --from=builder --chown=nvs:nvs /app/sitemgr /app/sitemgr

# Switch to non-root user
USER nvs

# Expose port
EXPOSE 8100

# Run the application
ENTRYPOINT ["/app/sitemgr"]
